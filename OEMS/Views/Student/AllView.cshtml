@using OEMS.Models;
@model List<StudentViewModel>

@{
    ViewBag.Title = "AllView";
}
<h2>Student Grades</h2>
@if (Model.Count() > 0)
{
    <div>
        <table class="table"
               data-cls-search="cell-md-8"
               data-cls-rows-count="cell-md-4"
               data-rows="5"
               data-rows-steps="5, 10">
            <tr>
                <th class="sortable-column">Name</th>
                <th class="sortable-column">Course</th>
                <th class="sortable-column" data-format="number">Avg Marks</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.FName @item.LName</th>
                    <th>@item.Course</th>
                    <th>@item.AvgMarks</th>
                </tr>
            }
        </table>


    </div>
}

<div>
    @if (AccountSession.User.Type == 'S')
    {
        <a href="/Home/Index">Back Home</a>
    }
    else
    {
        <a href="/Student/Index">Back To List</a>
    }
</div>