@using OEMS.Models;
@model List<UserModel>

@{
    ViewBag.Title = "Index";
}
<h2>
    Students
</h2>
<button onclick="window.location.href='/Student/Create'" class="btn btn-info btn-link">Create</button>
<button onclick="window.location.href='/Student/AllView'" class="btn btn-success btn-link">Student Grades</button>

@if (Model.Count() > 0)
{
    <div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Course</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.AccountId</th>
                    <th>@item.Name</th>
                    <th>@item.CourseId</th>
                    <th><button onclick="window.location.href='/Student/View/@item.AccountId'"  rel="tooltip" class="btn btn-info"><i class="material-icons">person</i></button></th>
                    <th><button onclick="window.location.href='/Student/Edit/@item.AccountId'" rel="tooltip" class="btn btn-success"><i class="material-icons">edit</i></button></th>
                </tr>
            }
        </table>


    </div>
}

<div>
    <button onclick="window.location.href='/Home/Index'" class="btn btn-info btn-link">Back Home</button>
</div>
